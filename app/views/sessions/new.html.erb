<% @title = "ログイン" %>
<div class="container">

  <h2 class="h2-responsive">
    <%= @title %>
  </h2>

  <div class="container">
    <%= form_tag "/login" do %>
      <div class="form-group"> <%#ID%>
        <label for="userName">ユーザー名</label>
        <%= text_field_tag "user_name", "", id: "userName", class: "form-control" %>
      </div>
      <div class="form-group"> <%#Pass%>
        <label for="password">パスワード</label>
        <%= password_field_tag "password", "", id: "password", class: "form-control" %>
      </div>
      <%= submit_tag "ログイン", id: "loginButton", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>